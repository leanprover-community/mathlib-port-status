<script>hljs.highlightAll();</script>
{% endblock %}

{% block nav %}
{{ super() }}
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="old.html">alternate view</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="out-of-sync.html">out of sync</a>
        </li>
    </ul>
